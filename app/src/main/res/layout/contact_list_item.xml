<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvContact"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivContactImage"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_marginStart="26dp"
            android:layout_marginTop="38dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/avatar" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="125dp"
            android:layout_height="24dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="36dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/ivContactImage"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Lorna Kamau" />

        <ImageView
            android:id="@+id/ivPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/ivContactImage"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            app:srcCompat="@drawable/baseline_local_phone_24" />

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/ivPhoneNumber"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            tools:text="+25423907612" />

        <ImageView
            android:id="@+id/ivEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toEndOf="@+id/ivContactImage"
            app:layout_constraintTop_toBottomOf="@+id/ivPhoneNumber"
            app:srcCompat="@drawable/baseline_email_24" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/ivEmail"
            app:layout_constraintTop_toBottomOf="@+id/tvNumber"
            tools:text="lornak@gmail.com" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toEndOf="@+id/ivContactImage"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_tag_faces_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>